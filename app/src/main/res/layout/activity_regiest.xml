<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/register"
    android:orientation="vertical"
    >

    <LinearLayout
        android:id="@+id/ll_edit"
        android:layout_centerInParent="true"
        android:background="@color/bright_foreground_disabled_material_dark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp">

        <EditText
            android:textColor="@color/abc_background_cache_hint_selector_material_light"
            android:text="请输入手机号作为用户名"
            android:id="@+id/et_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10" >
        </EditText>

        <EditText
            android:textColor="@color/abc_background_cache_hint_selector_material_light"
            android:text="验证码为四位数字"
            android:id="@+id/editText2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10" />

        <EditText
            android:textColor="@color/abc_background_cache_hint_selector_material_light"
            android:text="请输入您的密码"
            android:id="@+id/editText3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10" />


    </LinearLayout>
    <Button
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/ll_edit"
        android:id="@+id/button1"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="立即注册"
        android:textColor="#FFFFFF"
        android:background="@drawable/button"
/>

</RelativeLayout>